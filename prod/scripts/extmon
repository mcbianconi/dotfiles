#!/bin/bash

switch="$1"
user=$(whoami)

case "$switch" in
  enable|-e)
    xrandr --output HDMI-1 --left-of eDP-1 --auto
    /home/${user}/.fehbg
    pkill dunst
    ;;
  disable|-d)
    xrandr --output HDMI-1 --off
    /home/${user}/.fehbg
    pkill dunst
    ;;
  *)
    echo "Invalid option. Exiting."
    ;;
esac
